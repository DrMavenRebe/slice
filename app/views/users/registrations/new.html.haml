.container
  = simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: { class: 'form-signin' }) do |f|
    %h2.form-signin-heading  Register with Fooda

    .form-group
      %input#textinput.form-control.input-md{:name => "secrety_key", :placeholder => "Secret Signup Key", :type => "text", error: "you must know the secret key to play. Go talk to Dave"}

    .form-inputs
      = f.input :name, label: false, hint: false, input_html: { class: 'form-control' }, placeholder: "Full Name"

    .form-inputs
      = f.input :email, :required => true, label: false, hint: false, input_html: { class: 'form-control' }, placeholder: "Company Email"

    .form-inputs
      = f.input :market, :required => true, label: false, hint: false, input_html: { class: 'form-control' }, placeholder: "Market"

    .form-inputs
      = f.input :team, :required => true, label: false, hint: false, input_html: { class: 'form-control' }, placeholder: "Company Department"


    = f.button :submit, 'Complete Registration', html: { class: "btn btn-lg btn-primary btn-block" }